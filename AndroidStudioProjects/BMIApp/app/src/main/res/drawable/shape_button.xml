<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 通常時 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- ボタンの色 -->
            <solid android:color="@color/color_button_off" />
            <stroke android:width="1dp" android:color="@color/color_line" />
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
        </shape>
    </item>
    <!-- 押下時 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- ボタンの色 -->
            <stroke android:width="1dp" android:color="@color/color_button_line" />
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <solid android:color="@color/color_button_on" />
        </shape>
    </item>
</selector>